module.exports = {
  config: {
    name: "rakibreact",
    version: "1.0",
    author: "ST | Sheikh Tamim",
    countDown: 0,
    role: 0,
    description: "React when someone mentions Rakib",
    category: "fun",
    guide: {
      en: "Just mention 'rakib' in your message",
      bn: "рж╢рзБржзрзБ ржЖржкржирж╛рж░ ржмрж╛рж░рзНрждрж╛ржпрж╝ 'rakib' ржЙрж▓рзНрж▓рзЗржЦ ржХрж░рзБржи"
    }
  },

  onChat: async function({ message, event, api }) {
    const text = event.body.toLowerCase();
    
    if (text.includes("rakib")) {
      // React with haha emoji
      api.setMessageReaction("ЁЯШЖ", event.messageID, (err) => {}, true);
      
      // Send the message
      return message.reply("рж╣рж╛рж▓рж╛рж░ ржирзБржирзБ ржЫрзЛржЯ ЁЯдг");
    }
  }
};